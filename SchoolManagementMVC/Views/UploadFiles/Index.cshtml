@model IEnumerable<SchoolManagementMVC.Models.UploadFile>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary)
            </th>
            <th>
                Archivo(s)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employees.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Students.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @if (item.FileDetails.Count() == 0)
                {
                    <span>No File</span>
                }
                else
                {
                    <span>@item.FileDetails.Count() File(s)</span>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.UploadFileID }) |
                @Html.ActionLink("Details", "Details", new { id=item.UploadFileID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.UploadFileID })
            </td>
        </tr>
    }

    </table>

</div>

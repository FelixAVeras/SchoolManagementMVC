@model SchoolManagementMVC.Models.UploadFile

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "UploadFiles", null, FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>UploadFile</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-xs-12 col-md-3">
            <div class="form-group">
                <label for="" class="control-label">Eliga una Posicion</label>
                <select name="" id="chooseSelect" class="form-control">
                    <option value="0">--Seleccione--</option>
                    <option value="students">Estudiantes</option>
                    <option value="employees">Empleados</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StudentID, "StudentID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("StudentID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.StudentID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EmployeeID, "EmployeeID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("EmployeeID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EmployeeID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Summary, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.TextAreaFor(model => model.Summary, new { htmlAttributes = new { @class = "form-control" } })*@
            <textarea class="form-control" name="Summary"></textarea>
            @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <label class="control-label col-md-2">Files:</label>
        <div class="col-md-10">
            <input type="file" name="file" class="form-control" multiple="multiple" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
$('#chooseSelect').change(function(){
	var selectedOption = $('#chooseSelect').val();

	if(selectedOption == 1) {
		$('#students').css({'display': 'block'});
		$('#employees').css({'display': 'none'});
	} else if(selectedOption == 2) {
		$('#students').css({'display': 'none'});
		$('#employees').css({'display':  'block'});
	} else {
		$('#students').css({'display': 'none'});
		$('#employees').css({'display': 'none'});
	}
});
</script>

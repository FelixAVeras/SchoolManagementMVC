<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - School Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://bootswatch.com/3/flatly/bootstrap.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,700,700i&display=swap" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet"/>
    <link href="~/Content/Custom.css" rel="stylesheet"/>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("School Management MVC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", null,  new { @class = "fa fa-home" })</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Personas <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Estudiantes", "Index", "Students")</li>
                            <li>@Html.ActionLink("Padres/Tutores", "Index", "Parents")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Empleados", "Index", "Employees")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Acciones <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Tipos de Documentos", "Index", "DocumentTypes")</li>
                            <li>@Html.ActionLink("Posición", "Index", "Positions")</li>
                            <li>@Html.ActionLink("Estados", "Index", "States")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Cursos", "Index", "Courses")</li>
                            <li>@Html.ActionLink("Inscripciones", "Index", "Enrollments")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Genero", "Index", "Genders")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Subida de Archivos", "Index", "UploadFiles")</li>
                        </ul>
                    </li>
                    <li><a href="#">Finanzas</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><i class="fa fa-bell"></i> Notificaciones</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">nombreUsuario <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content containerWhite">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - IF Software Development</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
